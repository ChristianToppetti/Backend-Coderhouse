<article>
  <form action="/api/account/recovery/{{rid}}" method="post">
    <header>
      <h1>Restrablecer contraseña</h1>
    </header>
    {{#if rid}}
      <p>Ingresa la nueva contraseña</p>
      <input type="password" name="password" placeholder="Contraseña nueva" required />
    {{else}}
      <p>Ingresa el correo vinculado a tu cuenta</p>
      <input type="email" name="email" placeholder="Correo" required />
    {{/if}}
    <footer>
      <input type="submit" value="Enviar">
    </footer>
  </form>
</article>