<div id="checkout" style="border-radius: .2rem;">
    <!-- Checkout will insert the payment form here -->
</div>
<div id="cart">
  <h1>Carrito: {{cartId}}</h1>
  <div class="cart_container">
    {{#if products}}
      {{#each products}}
        <div class="cart_item {{#if this.status}}green{{else}}red{{/if}}">
          <div>
            <p><strong>ID: </strong>{{this._id}}</p>
            <p><strong>Nombre: </strong>{{this.title}}</p>
            <p><strong>Precio: </strong>{{this.price}}</p>  
          </div>
          <div>
            <p><strong>Categoria: </strong>{{this.category}}</p>
            <p>Stock:{{this.stock}}</p>
            <p>DescripciÃ³n:{{this.description}}</p>
            <strong>Cantidad: {{this.quantity}}</strong>
          </div>
          <button id="delete_{{this._id}}" class="button_delete" style="flex-basis: 5%">X</button>
        </div>
      {{/each}}
    {{else}}
      <h3 style="text-align: center; margin: 1rem">No hay productos en el carrito</h3>
    {{/if}}
  </div>
  <button id="btn_buy" {{#unless products}}disabled{{/unless}}>Comprar carrito ðŸ›’</button>
</div>

